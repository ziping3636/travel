<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.blog.mapper.BlogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.travel.blog.entity.Blog">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="img" property="img" />
        <result column="created" property="created" />
        <result column="praise_num" property="praise_num" />
        <result column="read_num" property="read_num" />
        <result column="collection_num" property="collection_num" />
        <result column="share_num" property="share_num" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, content, img, created, praise_num, read_num, collection_num, share_num
    </sql>

</mapper>
